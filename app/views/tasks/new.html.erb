<div class="container mt-3">
  <div class="adjust-width">
    <%= form_for @task do |task| %>
      <div class="form-group">
        <%= task.label :title %>
        <%= task.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= task.label :details %>
        <%= task.text_field :details, class: 'form-control' %>
      </div>
      <div class="d-flex">
        <%= task.submit "Create task", class: 'btn btn-primary flex-grow-1 mt-3' %>
      </div>
    <% end %>
    <br>
    <%= link_to "Back to tasks", tasks_path %>
  </div>
</div>
