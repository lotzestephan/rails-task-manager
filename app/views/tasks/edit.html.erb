<div class="container mt-3">
  <div class="adjust-width">
    <%= form_for @task do |task| %>
      <div class="form-group">
        <%= task.label :title %>
        <%= task.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= task.label :details %>
        <%= task.text_field :details, class: "form-control" %>
      </div>
      <div class="form-check">
        <%= task.check_box :completed, class: "form-check-input", type: "checkbox" %>
        Completed
      </div>
      <div class="d-flex">
        <%= task.submit "Edit task", class: "btn btn-secondary flex-grow-1 mt-3" %>
    </div>
    <% end %>
    <br>
    <%= link_to "Back to all tasks", tasks_path %>
  </div>
</div>
